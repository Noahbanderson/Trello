<h1>List of tasks from "<%= @list.list_title%>" in ""</h1>
<hr/>

<% @tasks.each do |task| %>
  <div class="ui card">
    <div class="content">
      <p class="header">
        <%= task.task_name %>
      </p>
      <div class="meta">
        <span class="date"><%= task.t_o_number.to_s %></span>
      </div>
    </div>
    <div class="extra content">
      <%= link_to 'Edit', edit_list_task_path(task, @list) %> 
      <%= link_to "Remove", list_task_path(task, @list), method: :delete %>
    </div>
  </div>
<% end %>
<br />

<%= link_to "New Task", new_list_task_path(@list), class: "ui green button small" %>
